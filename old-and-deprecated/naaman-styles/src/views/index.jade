doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')

    title Anthony Pinter

    meta(name="description" content="Anthony Pinter")
    meta(name="keywords" content="Anthony Pinter")
    meta(property="og:url" content="https://www.anthonypinter.com")
    meta(property="og:type" content="website")
    meta(property="og:site_name" content="Anthony Pinter")
    meta(property="og:title" content="Anthony Pinter")
    meta(property="og:description" content="Anthony Pinter")
    meta(property="og:image" content="assets/preview.png")
    meta(property="og:locale" content="en_US")

    link(href='https://fonts.googleapis.com/css?family=Josefin+Sans:300', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400', rel='stylesheet', type='text/css')

    link(rel='shortcut icon' href='assets/favicon.png' type='image/png')

    script(src='//code.jquery.com/jquery-2.1.4.min.js')
    script(src='main.js')


  body
    .left
      #headshot
        img(src='assets/headshot.jpg')
      h1 Anthony Pinter
      ul#navi
        li#navi-home: a home
        li#navi-about: a bio
        li#navi-publications: a publications
      #external-links
        a#btn-stech(href='https://cmci.colorado.edu/idlab/')
          p identity lab
        a(href='https://twitter.com/anthonypinter'): span.external-link.fa.fa-twitter
        a(href='mailto:anthony.pinter@colorado.edu'): span.external-link.fa.fa-envelope-o

    .card#home
      #shortBio!= bio.shortBio
      .line
      #news
        #news-title
          h2 news
        ul
          each n in news
            li
              span.news-date= n.date
              span.separator |
              span!= n.title

    .card#about
      #fullBio!= bio.fullBio

    .card#publications
      each year in publications
        if (year[0].year >= 2010)
          h2= year[0].year
        else
          h2 Earlier
        ul
          each p in year
            li
              a#p-icon(href=p.paperLink): span.fa.fa-file-pdf-o
              #p-info
                p#p-title= p.title
                span#p-author= p.author
                span.separator |
                if p.sourceLink
                  a(href=p.sourceLink): span#p-source= p.source
                else
                  span#p-source= p.source
                if p.extraInfo
                  p!= p.extraInfo
                if p.award
                  #p-award
                    span.fa.fa-trophy
                    span= p.award
